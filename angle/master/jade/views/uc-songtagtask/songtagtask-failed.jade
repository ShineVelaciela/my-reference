.container-fluid
    .row-fluid
        .span12
            h3.page-title
                span.divider 媒资库/项目管理/导入反馈
    .row
        .col-lg-12
            #panelDemo1.panel.panel-default
                .panel-heading(ng-class="{'panel-heading-collapsed':panelDemo1}") 失败详细列表
                    paneltool(tool-collapse="tool-collapse")
                .panel-wrapper(collapse="panelDemo1")
                    .panel-body
                        .col-sm-3.pull-right
                            .btn-group
                                button.btn.btn-default(ng-click="exportFaildExcel()") 导出
                        .table-responsive(style="padding-top: 10px;")
                            table.table.table-striped
                                thead
                                    tr(role="row")
                                        th(style="width: 5%") 序号

                                        th(style="width: 10%;" ng-if="type == 'tag'") 版权ID
                                        th(style="width: 10%;" ng-if="type == 'tag'") 歌曲ID
                                        th(style="width: 20%;" ng-if="type == 'tag'") 歌曲名
                                        th(style="width: 15%;" ng-if="type == 'tag'") 艺人名
                                        th(style="width: 25%;" ng-if="type == 'tag'") 标签（表格）

                                        th(ng-if="type == 'song'") 版权ID
                                        th(ng-if="type == 'album'") 专辑ID
                                        th(ng-if="type == 'artist'") 艺人ID

                                        th(style="width: 15%;" ng-if="type == 'task'") 版权ID
                                        th(style="width: 15%;" ng-if="type == 'task'") 歌曲ID
                                        th(style="width: 20%;" ng-if="type == 'task'") 歌曲名
                                        th(style="width: 20%;" ng-if="type == 'task'") 艺人名
                                        th(ng-if="type != 'tag'") 被分配者
                                        th 失败原因

                                tbody(role="alert")
                                    tr.gradeX.odd(ng-repeat="data in datas track by $index")
                                        td {{$index + 1}}

                                        td(ng-if="type == 'tag'") {{data.copyrightId}}
                                        td(ng-if="type == 'tag'") {{data.data.songId}}
                                        td(ng-if="type == 'tag'") {{data.songName}}
                                        td(ng-if="type == 'tag'") {{data.singerName}}
                                        td(ng-if="type == 'tag'") {{data.tag}}

                                        td(ng-if="type == 'song'") {{data.copyrightId}}
                                        td(ng-if="type == 'album'") {{data.albumId}}
                                        td(ng-if="type == 'artist'") {{data.artistId}}

                                        td(ng-if="type == 'task'") {{data.copyrightId}}
                                        td(ng-if="type == 'task'") {{data.songId}}
                                        td(ng-if="type == 'task'") {{data.songName}}
                                        td(ng-if="type == 'task'") {{data.artistName}}
                                        td(ng-if="type != 'tag'") {{data.data.username}}
                                        td {{data.msg}}

